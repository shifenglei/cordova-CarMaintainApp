
@{
    ViewBag.Title = "EditInfo";
}
<link href="@Url.Content("~/Content/bootstrap-multiselect.css")" type="text/css" rel="stylesheet" />
<form id="frmEditInfo">
    
    <input type="hidden" name="taskId" value="@(ViewBag.taskId != null ? ViewBag.taskId : "")"/>

    <div class="container">
        <div class="container col-sm-8 col-sm-offset-2">
            <div class="form-group col-sm-12">
                <h4><span class="label label-primary">车牌号：</span></h4>
                <div class="row" style="margin: 0">
                    <div class="col-xs-4" style="padding: 0"><input name="carNo1" type="text" class="form-control" value="鲁B" /></div>
                    <div class="col-xs-8" style="padding: 0"><input name="carNo2" type="text" class="form-control" /></div>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <div class="row form-group col-sm-12">
                    <div class="form-group col-sm-6">
                        <h4><span class="label label-primary">维修类别：</span></h4>
                        <select id="slMaintainType" multiple="multiple" name="MaintainTypes">
                            @{ foreach (var item in ViewBag.maintainType)
                                {
                                    <option value="@item.Mid">@item.Mname</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <h4><span class="label label-primary">维修技师：</span></h4>
                        <select id="sltechnician" multiple="multiple" name="technicians">
                            @{ foreach (var item in ViewBag.technicians)
                                {
                                    <option value="@item.Uid">@item.Uname</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <div class="form-group col-sm-3">
                    <h4><span class="label label-primary">车 型：</span></h4>
                    <input name="carName" type="text" class="form-control" />
                </div>


                <div class="form-group col-sm-3">
                    <h4><span class="label label-primary">车主姓名：</span></h4>
                    <input name="carOwner" type="text" class="form-control" />
                </div>

                <div class="form-group col-sm-3">
                    <h4><span class="label label-primary">车主电话1：</span></h4>
                    <input name="carOwnerTel1" type="text" class="form-control" />
                </div>

                <div class="form-group col-sm-3">
                    <h4><span class="label label-primary">车主电话2：</span></h4>
                    <input name="carOwnerTel2" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group col-sm-12">
                <h4><span class="label label-primary">行驶里程：</span></h4>
                <div class="input-group">
                    <input name="carTrevalDistance" type="text" class="form-control text-right" />
                    <span class="input-group-addon">公里</span>
                </div>
            </div>
            <div class="container col-sm-4 col-sm-offset-4">
                <input id="btnSubmit" type="button" class="btn btn-success form-control" value="提 交" />
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap-multiselect.js"></script>
    <script src="~/Scripts/Maintain/EditInfo.js?ver=1.0"></script>
    <script type="text/javascript">
        $('#sltechnician').multiselect();
        $('#slMaintainType').multiselect();
    </script>
</form>

