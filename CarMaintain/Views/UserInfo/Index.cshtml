
@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/Login.css")" type="text/css" rel="stylesheet" />

@using (Html.BeginForm("ULogin", "UserInfo", FormMethod.Post))
{
<div class="container back">
    <div class="row loginback col-xs-12">
        <div class="col-xs-12 loginpanel">
            用户登录
                <div class="form-group logingroup col-xs-12 ">
                    <input type="text" id="txtUserCode" name="UserCode" class="form-control col-xs-12" placeholder="用户编码" />
                </div>
                <div class="form-group logingroup col-xs-12 ">
                    <input type="password" id="txtPwd" name="Password" class="form-control col-xs-12" placeholder="密码" />
                </div>
                <div class="form-group logingroup col-xs-12">                    
                    <input type="submit" class="btn btn-warning" id="btnLogin" value="登  录"/>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="cbRemember" checked="checked">记住我
                        </label>
                    </div>
                    <input type="hidden" id="errMsg" value="@ViewBag.ErrorMsg" />
                                       
                </div> 
        </div>
    </div>
</div>
<script src="~/Scripts/UserInfo/Index.js"></script>
}

